{
    "name": "Web Blocker",
    "description": "Be productive, be yourself",
    "version": "0.1.0",
    "manifest_version": 2,
    "background": {
        "scripts": ["./background.js"]
    },
    "options_page": "./options.html",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128-circle.png"
    },
    "browser_action": {
        "default_icon": "icon128-circle.png",
        "default_popup": "popup.html",
        "default_title": "TO-DO List!"
    },
    "permissions": [
        "tabs",
        "storage"
    ]
        
}